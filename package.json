{
  "name": "dnd-grid",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "release": "changeset publish",
    "dev": "turbo run dev",
    "prepare": "husky",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check-types": "turbo run check-types",
    "workers:dev": "npm run dev --workspace=docs-worker",
    "workers:deploy": "npm run deploy --workspace=docs-worker"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@changesets/cli": "^2.29.8",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.11",
    "turbo": "^2.7.1",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*": "biome check --write --no-errors-on-unmatched"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
