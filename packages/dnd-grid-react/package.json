{
  "name": "@dnd-grid/react",
  "version": "1.0.4",
  "description": "A drag-and-drop (DnD), resizable grid layout for React",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/main.umd.cjs",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js",
      "require": "./dist/main.umd.cjs"
    },
    "./styles.css": "./dist/styles/index.css",
    "./base.css": "./dist/styles/base.css",
    "./theme.css": "./dist/styles/theme.css"
  },
  "scripts": {
    "build": "tsc --p ./tsconfig.build.json && vite build",
    "watch": "tsc --p ./tsconfig.build.json && vite build --watch",
    "lint": "biome check .",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "release": "npm run build && npm version patch && npm publish",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mblode/dnd-grid.git"
  },
  "keywords": [
    "react",
    "grid",
    "drag",
    "draggable",
    "resize",
    "resizable",
    "fluid",
    "responsive",
    "dnd"
  ],
  "author": "Matthew Blode <mblode@users.noreply.github.com> (https://github.com/mblode)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mblode/dnd-grid/issues"
  },
  "homepage": "https://github.com/mblode/dnd-grid",
  "dependencies": {
    "clsx": "^2.1.1",
    "fast-equals": "^6.0.0"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-draggable": "^4.5.0",
    "react-resizable": "^3.0.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/react-resizable": "^3.0.8",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "jsdom": "^27.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-draggable": "^4.5.0",
    "react-resizable": "^3.0.5",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.16"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
