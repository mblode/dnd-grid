{
  "name": "dnd-grid",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check-types": "turbo run check-types",
    "workers:dev": "npm run dev --workspace=docs-worker",
    "workers:deploy": "npm run deploy --workspace=docs-worker"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "turbo": "^2.7.0",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.3",
  "workspaces": ["apps/*", "packages/*"]
}
